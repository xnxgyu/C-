#include <stdio.h>
#include <stdlib.h>
#define SIZE 25

int length(char str[]);

int main(void)
{
    char userstr[SIZE];
    
    printf("輸入: ");
    gets(userstr);
    
    printf("This string have %d words (including space).\n", length(userstr));
    
    syetem("pause");
    return 0;
    
}

int length(char str[])
{
    int i = 0;
    while(str[i] != '\0')
        i++;
    
    return i;
    
}
